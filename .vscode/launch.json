{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "hostname": "localhost",
            "pathMappings": {
                "/app": "${workspaceFolder}"
            },
            "xdebugSettings": {
                "max_children": 100,
                "max_data": 1024,
                "max_depth": 5,
                "show_hidden": 1
            },
            "log": true,
            "external_values": {
                "request": "launch",
                "mode": "debug"
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9003,
            "runtimeArgs": ["-c", "docker-php.ini"],
            "env": {
                "XDEBUG_MODE": "debug",
                "XDEBUG_SESSION": "1"
            }
        },
        {
            "name": "Docker: Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "hostname": "0.0.0.0",
            "pathMappings": {
                "/app": "${workspaceFolder}"
            },
            "docker": {
                "containerName": "app",
                "serviceName": "app",
                "action": "startDebugging"
            }
        }
    ]
}
