{
	frankenphp {
		num_threads 8
	}

	admin off
}

:80 {
	log {
		format json
		level INFO
	}

	root * public/
	encode zstd gzip

	handle_path /assets/* {
		header Cache-Control "public, max-age=31536000"
		file_server
	}

	php_server {
		worker index.php
	}

	exec php bin/console messenger:consume scheduler_default --memory-limit=128M -vv
}

:2019 {
	metrics
}
