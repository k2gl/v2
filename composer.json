{
    "name": "app/pragmatic-symfony",
    "description": "Symfony Pragmatic Architecture with Vertical Slice + FrankenPHP",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.5",
        "symfony/framework-bundle": "^7.2",
        "symfony/runtime": "^7.2",
        "symfony/messenger": "^7.2",
        "symfony/doctrine-bridge": "^7.2",
        "symfony/validator": "^8.0",
        "symfony/http-kernel": "^7.2",
        "symfony/routing": "^7.2",
        "doctrine/orm": "^3.3",
        "doctrine/dbal": "^4.0",
        "doctrine/doctrine-bundle": "^2.13",
        "doctrine/migrations": "^3.8",
        "nelmio/api-doc-bundle": "^4.26",
        "nelmio/cors-bundle": "^2.5",
        "predis/predis": "^3.3",
        "ext-pdo_pgsql": "*"
    },
    "require-dev": {
        "symfony/maker-bundle": "^1.62",
        "symfony/phpunit-bridge": "^8.0",
        "phpunit/phpunit": "^11.0",
        "zenstruck/messenger-test": "^1.6",
        "zenstruck/foundry": "^2.0",
        "zenstruck/browser": "^1.6",
        "dama/doctrine-test-bundle": "^8.2",
        "phpstan/phpstan": "^2.1",
        "php-cs-fixer/shim": "^3.65",
        "k2gl/phpunit-fluent-assertions": "^12.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "lint": "php-cs-fixer fix --dry-run --diff",
        "fix": "php-cs-fixer fix",
        "analyze": "phpstan analyze src/ --level=5"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        }
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "docker": true
        }
    }
}
